<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#898989"
        android:onClick="startLogcat"
        android:padding="20dp"
        android:text="start logcat" />

    <View
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#898989"
        android:onClick="overLogcat"
        android:padding="20dp"
        android:text="over logcat" />

    <View
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#898989"
        android:onClick="printLog"
        android:padding="20dp"
        android:text="print test log" />

    <View
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#898989"
            android:onClick="printLog1"
            android:padding="20dp"
            android:text="print log1" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#898989"
            android:onClick="printLog2"
            android:padding="20dp"
            android:text="print log2" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#898989"
            android:onClick="printLog3"
            android:padding="20dp"
            android:text="print log3" />
    </LinearLayout>
</LinearLayout>